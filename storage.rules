rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Tournament banners - public read, authenticated write
    // Note: Storage rules cannot check Firestore user roles directly,
    // so we allow any authenticated user. Role checks are handled in the app.
    match /tournament-banners/{allPaths=**} {
      allow read: if true; // Public read for displaying banners
      allow write: if request.auth != null; // Any authenticated user can upload
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // User profile images - users can manage their own
    match /user-profiles/{userId}/{allPaths=**} {
      allow read: if true; // Public read for profile images
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Test uploads - authenticated users only
    match /test-uploads/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Participant documents - authenticated users only (role check handled in app)
    match /participant-documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}