rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Tournament banners - public read, authenticated write (role check handled in app)
    match /tournament-banners/{allPaths=**} {
      allow read: if true; // Public read for displaying banners
      allow write: if request.auth != null; // Authenticated users only
    }
    
    // User profile images - users can manage their own
    match /user-profiles/{userId}/{allPaths=**} {
      allow read: if true; // Public read for profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Test uploads - authenticated users only
    match /test-uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Participant documents - authenticated users only (role check handled in app)
    match /participant-documents/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}