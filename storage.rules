rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Tournament banners - public read; write for admin, super-admin, tournament-admin
    // Role (admin / super-admin / tournament-admin) is enforced in the app; Storage allows any authenticated user.
    match /tournament-banners/{allPaths=**} {
      allow read: if true; // Public read for displaying banners
      allow write: if request.auth != null; // Admin, super-admin, and tournament-admin (all authenticated users with access to edit in app)
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // User profile images - users can manage their own
    match /user-profiles/{userId}/{allPaths=**} {
      allow read: if true; // Public read for profile images
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Test uploads - authenticated users only
    match /test-uploads/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Participant documents - authenticated users only (role check handled in app)
    match /participant-documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}